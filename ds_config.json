{
    "train_micro_batch_size_per_gpu": 16,  
    "fp16": {
        "enabled": true
    },
    "zero_optimization": {
        "stage": 2, 
        "allgather_partitions": true,  
        "allgather_bucket_size": 5e8,  
        "reduce_scatter": true,  
        "overlap_comm": true 
    },
    "logging": {
        "level": "debug",
        "frequency": 1
      },
    "gradient_accumulation_steps": 16, 
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 5e-5 
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 5e-5,
            "warmup_num_steps": 1000 
        }
    }
}


